generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER_B2C // Розничный покупатель
  CUSTOMER_B2B // Корпоративный клиент
  MANAGER      // Менеджер
  ADMIN        // Администратор
}

enum OrderStatus {
  PENDING      // Ожидает подтверждения
  CONFIRMED    // Подтвержден
  PROCESSING   // В обработке
  SHIPPED      // Отправлен
  DELIVERED    // Доставлен
  CANCELLED    // Отменен
}

enum PaymentStatus {
  PENDING      // Ожидает оплаты
  PAID         // Оплачен
  FAILED       // Ошибка оплаты
  REFUNDED     // Возвращен
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER_B2C)
  
  // Профиль
  firstName String?
  lastName  String?
  phone     String?
  
  // B2B специфичные поля
  companyName String?
  inn         String?  @unique
  kpp         String?
  creditLimit Decimal? @db.Decimal(10, 2)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  orders    Order[]
  addresses Address[]
  
  @@map("users")
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  
  // Адрес
  country   String   @default("Россия")
  city      String
  street    String
  building  String
  apartment String?
  zipCode   String?
  
  isDefault Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  
  @@map("addresses")
}

model Product {
  id          String   @id @default(uuid())
  
  // Основные данные
  name        String
  description String?
  sku         String   @unique // Артикул
  
  // Цены
  priceRetail Decimal  @db.Decimal(10, 2) // Розничная цена
  priceB2B    Decimal? @db.Decimal(10, 2) // Оптовая цена
  
  // Остатки
  stock       Int      @default(0)
  unit        String   @default("шт") // Единица измерения
  
  // Категория
  categoryId  String?
  
  // Метаданные
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  category    Category?    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  
  @@map("products")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  parentId    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  parent      Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryTree")
  products    Product[]
  
  @@map("categories")
}

model Order {
  id            String        @id @default(uuid())
  orderNumber   String        @unique // Номер заказа
  
  // Клиент
  userId        String
  addressId     String
  
  // Статусы
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  
  // Суммы
  subtotal      Decimal       @db.Decimal(10, 2)
  deliveryPrice Decimal       @default(0) @db.Decimal(10, 2)
  totalPrice    Decimal       @db.Decimal(10, 2)
  
  // Доставка
  deliveryDate  DateTime?
  deliveryNotes String?
  
  // Timestamps
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Отношения
  user          User          @relation(fields: [userId], references: [id])
  address       Address       @relation(fields: [addressId], references: [id])
  items         OrderItem[]
  
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  
  quantity  Int
  price     Decimal  @db.Decimal(10, 2) // Цена на момент заказа
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}

// ============================================
// PHASE 10: APPLE CONTACTS INTEGRATION
// PHASE 11: GOOGLE CONTACTS + MULTI-SOURCE
// ============================================

model Contact {
  id               BigInt    @id @default(autoincrement())
  userId           String    @db.VarChar(255) // User who owns this contact
  
  // Basic contact info
  firstName        String?   @db.VarChar(255)
  lastName         String?   @db.VarChar(255)
  email            String?   @db.VarChar(255)
  phone            String?   @db.VarChar(50)
  company          String?   @db.VarChar(255)
  jobTitle         String?   @db.VarChar(255)
  notes            String?   @db.Text
  
  // Apple Contacts Integration (PHASE 10)
  appleContactId   String?   @db.VarChar(255)
  appleModifiedAt  DateTime?
  
  // Google Contacts Integration (PHASE 11)
  googleContactId  String?   @db.VarChar(255)
  googleModifiedAt DateTime?
  
  // Outlook Contacts Integration (PHASE 12)
  outlookContactId String?   @db.VarChar(255)
  outlookModifiedAt DateTime?
  
  // Multi-source support (PHASE 11-12)
  sourceType       String    @default("manual") @db.VarChar(50) // 'apple' | 'google' | 'outlook' | 'all_three' | 'manual'
  syncVersion      Int       @default(1)
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  // Relations
  syncConflicts    SyncConflict[]
  
  @@index([userId])
  @@index([email])
  @@index([appleContactId])
  @@index([googleContactId])
  @@index([outlookContactId])
  @@index([sourceType])
  @@map("contacts")
}

model AppleContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  lastSyncAt          DateTime?
  syncToken           String?   @db.VarChar(255)
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("apple_contacts_sync")
}

model GoogleContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  lastSyncAt          DateTime?
  syncToken           String?   @db.VarChar(255)
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("google_contacts_sync")
}

model OutlookContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  status              String    @db.VarChar(50) @default("disconnected")
  lastSyncAt          DateTime?
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("outlook_contacts_sync")
}

model SyncConflict {
  id                 BigInt    @id @default(autoincrement())
  contactId          BigInt
  userId             String    @db.VarChar(255)
  conflictType       String    @db.VarChar(50)
  localData          Json?
  remoteData         Json?
  resolved           Boolean   @default(false)
  resolutionStrategy String?   @db.VarChar(50)
  createdAt          DateTime  @default(now())
  resolvedAt         DateTime?

  contact Contact @relation(fields: [contactId], references: [id])

  @@index([contactId])
  @@index([userId])
  @@map("sync_conflicts")
}
